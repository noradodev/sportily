<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.Admin_Confirm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F68934"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="backTo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkoutTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/checkoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="272dp"
            android:fontFamily="@font/poppins"
            android:text="Add Product"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/backImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backImageView"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="371dp"
            android:layout_height="113dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="17dp">


            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="399dp"
                android:layout_height="109dp"
                app:srcCompat="@drawable/basketball"
                tools:layout_editor_absoluteX="-24dp"
                tools:layout_editor_absoluteY="2dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="409dp"
            android:layout_height="455dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp">


            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="454dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp">


            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingLeft="20dp"
                android:text="Product Type"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/productTypeEditTxt"
                android:layout_width="371dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:hint="Sport" />


            <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/poppins"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Product Name"
                android:textSize="16sp" />


                <EditText
                    android:id="@+id/productNameEditTxt"
                    android:layout_width="371dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:hint="Basketball" />


                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="Weight"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/weightEditTxt"
                    android:layout_width="371dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:hint="Weight" />


                <TextView
                    android:id="@+id/producedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="Price"
                    android:textSize="16sp" />




                <EditText
                    android:id="@+id/priceEditText"
                    android:layout_width="371dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:hint="15$" />


                <TextView
                    android:id="@+id/pricetextView"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="Description"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/descItem"
                    android:layout_width="368dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:hint="Round and bouncy" />




            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
        app:layout_constraintVertical_bias="1.0">


        <Button
            android:id="@+id/bLogout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_radius_addtocart"
            android:fontFamily="@font/poppins"
            android:text="Comfirm"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:onClick="addProductHandler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
